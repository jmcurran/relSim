print.profile = function(profile, ...){
    nLoci = length(profile)/2
    i1 = 2*(1:nLoci) - 1
    i2 = i1 + 1
    strProf = sprintf("%2d/%-2d", profile[i1], profile[i2])

    if(horizontal){
        cat(paste(paste(strProf, collapse = ""), "\n"))
    }else{
        cat(paste(paste(strProf, collapse = "\n"), "\n"))
    }
}
